<?xml version="1.0"?>

<launch>

<!--base controller -->

   <node name="farryn_controller_node" pkg="farryn_controller" type="farryn_controller_node" output="log">
      <rosparam command="load" file="$(find farryn_controller)/cfg/farryn_controller.yaml"/>
      <remap from="/cmd_vel" to="/r100_cmd_vel"/>
   </node>

<!--For smoother velocity -->

  <include file="$(find r100_bringup)/include/vel_smooth.launch.xml"/>



<!-- description file-->
    <include file="$(find r100_description)/launch/description_complete.launch"/>
    
<!--localization_node -->
<!--
  <arg name="efk" default="$(env USE_EKF)"/>
  <group if="$(eval arg('efk')==true)"> -->
    <arg name="odom_frame" default="odom"/> 
    <arg name="base_frame" default="base_footprint"/>
    <arg name="odom_topic" default="/odom"/>
    <arg name="imu_topic" default="/r100_imu"/>


<!-- Laser Launch -->
    <include file="$(find sick_scan)/launch/sick_lms_1xx.launch"/>

<!-- VLP launch -->
    <include file="$(find velodyne_pointcloud)/launch/VLP16_points.launch"/>


    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_loc_odom" clear_params="true" output="screen">      
      <remap from="odometry/filtered" to="odom_ekf" />
      <param name="frequency" value="30"/>
      <param name="sensor_timeout" value="0.1"/>
      <param name="two_d_mode" type="bool" value="true"/>
      <param name="odom_frame" value="$(arg odom_frame)"/>
      <param name="base_link_frame" value="$(arg base_frame)"/>
      <param name="odom0" value="$(arg odom_topic)"/> 
      <param name="imu0" value="$(arg imu_topic)"/>    

      <rosparam param="odom0_config">[true, true, false,
                                      false, false, false,
                                      false, false, false,
                                      false, false, true,
                                      false, false, false]</rosparam>

      <rosparam param="imu0_config">[false, false, false,
                                     false, false, false, 
                                     false, false, false,
                                     false, false, true,
                                     true, false, false]</rosparam>

      <param name="odom0_differential" value="true"/>
      <param name="imu0_differential" value="false" />
      <param name="odom0_relative" value="false"/>
      <param name="imu0_relative" value="false"/>
      <param name="imu0_remove_gravitational_acceleration" type="bool" value="true"/>
      <param name="print_diagnostics" value="false"/>
      <param name="imu0_linear_acceleration_rejection_threshold" value="0.1"/>
    </node>
  <!--/group-->

<!--IMU -->



    <include file="$(find r100_bringup)/include/pixhawk.launch.xml"/>



<!--Teleop nodes-->


<!--RC teleop node -->


    <!--include file="$(find r100_teleop)/launch/rc.launch"/-->


<!--Joystick teleop node -->
 


    <include file="$(find ria_teleop)/launch/joy_stick.launch"/>


<!--Twist_mux to priority command velocities -->
  <node pkg="twist_mux" type="twist_mux" name="twist_mux">
    <rosparam file="$(find r100_bringup)/include/twist_mux.yaml" command="load"/>
    <remap from="/cmd_vel_out" to="/r100_raw_cmd_vel"/>
  </node>

<!--2D laser sensor-->


    <!--include file="$(find r100_bringup)/include/sick_tim571_2050101.launch.xml"/-->
    <!-- include file="$(find r100_bringup)/include/sick_lms_1xx.launch.xml"/ -->

<!--RGBD node 
	<include file="$(find astra_launch)/launch/astra.launch"/> -->

 <!-- <group ns="/VIPER" >   
    <node pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc"/>
  </group>--> 
</launch>
